<div class="panel panel-primary devise-bs">
  <div class="panel-heading">
  <h2 class="panel-title">ユーザー情報の変更 edit</h2>
  </div>
    <div class="panel-body">
     <div class="row" id="user_new">
      <div class="col-sm-offset-4 col-sm-4">   
      <%= form_for(@user, url: user_profile_path(@user, @profile) , html: {method: 'PATCH'}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= fields_for(@profile) do |profile| %>
          <%= render 'shared/error_messages', object: profile.object %>
        <% end %>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, readonly: :true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, readonly: :true, class: "form-control" %>
      </div>
      
      <%= fields_for(@profile) do |profile| %>
        <%= profile.hidden_field :user_id %>
        <div class="form-group">
          <%= profile.label :sutuff_code %>
          <%= profile.text_field :stuff_code,  class: "form-control" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "UPDATE", class: "btn btn-default" %>
      </div>
     <% end %>
    </div>
   </div>
  </div>
</div>
<%= render 'shared/links', user: @user, profile: @profile %>